package com.javatechie;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;

@SpringBootApplication
public class CqrsProductCommandServiceApplication {

	public static void main(String[] args) {
		SpringApplication.run(CqrsProductCommandServiceApplication.class, args);
	}

}
// kafka commands:

// Step 1 :  for formatting the data 
			/*
			 	bin/kafka-storage.sh format \
			  	--standalone \
			  	-t kaNq5oG9R1SzZF0_Xdt4rg \
			  	-c config/controller.properties
			 */

// Step 2 : start the kafka server 
		// bin/kafka-server-start.sh config/controller.properties

// Step 3 : create the topic : 
			/*
			  bin/kafka-topics.sh --create \
			  --topic product-event-topic \
			  --bootstrap-server localhost:9092 \
			  --partitions 1 \
			  --replication-factor 1
 
			 */

// Step 4 : verify the topic exists, run : 
			// bin/kafka-topics.sh --list --bootstrap-server localhost:9092

// Step 5 : 
			/*
			 * bin/kafka-console-consumer.sh \
			  --topic product-event-topic \
			  --from-beginning \
			  --bootstrap-server localhost:9092

			 * */

